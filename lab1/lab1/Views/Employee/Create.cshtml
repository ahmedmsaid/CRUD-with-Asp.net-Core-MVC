@model Employee
@{
    Layout = "_otherLayout";
}
        <form action="/employee/Create" method="post">

        <label for="Name" class="form-label">Name</label>
        <input class="form-control" asp-for="Name" placeholder="Enter Name" value=""/>
        <span asp-validation-for="Name" class="alert alert-danger"></span>

        <label for="Address" class="form-label">Address</label>
        <input class="form-control"asp-for="Address" placeholder="Enter Address" />
        <span asp-validation-for="Address" class="alert alert-danger"></span>

        <label for="Age" class="form-label">Age</label>
        <input class="form-control" asp-for="Age" placeholder="Enter Age" />
        <span asp-validation-for="Age" class="alert alert-danger"></span>

        <label for="Salary" class="form-label">Salary</label>
        <input class="form-control" asp-for="Salary" placeholder="Enter Salary" />
        <span asp-validation-for="Salary" class="alert alert-danger"></span>

        <label for="PhoneNumber" class="form-label">Salary</label>
        <input class="form-control" asp-for="PhoneNumber" placeholder="Enter Phone Number" />
        <span asp-validation-for="PhoneNumber" class="alert alert-danger"></span>

        <input class="btn btn-dark" type="submit" value="Add"/>
    </form>

@section scripts{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
}